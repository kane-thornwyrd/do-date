{
  "name": "do-date",
  "version": "0.0.1",
  "description": "The minimalist date manipulation library",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "scripts": {
    "test": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest",
    "build:umd": "swc src/index.ts -o lib/index.js --config-file .umd.swcrc",
    "build:module": "swc src/index.ts -o esm/index.js --config-file .esm.swcrc",
    "build": "run-p build:*",
    "build-and-test": "run-s build test",
    "dev": "chokidar --initial -d 1500 \"src/**/*.ts\" -c \"npm run build-and-test\"",
    "install": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kane-thornwyrd/do-date.git"
  },
  "keywords": [
    "date",
    "suckless",
    "simple",
    "kiss",
    "lightweight",
    "self-contained",
    "isomorphic",
    "agnostic"
  ],
  "author": "jean-cédric Thérond <jean.cedric.t@gmail.com>",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/kane-thornwyrd/do-date/issues"
  },
  "homepage": "https://github.com/kane-thornwyrd/do-date#readme",
  "engines": {
    "node": ">=22.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "8.4.1",
    "@swc/cli": "0.4.0",
    "@swc/core": "1.7.22",
    "@swc/helpers": "0.5.13",
    "@swc/jest": "0.2.36",
    "@types/chai": "4.3.19",
    "@types/jest": "29.5.12",
    "browserslist": "4.23.3",
    "chai": "5.1.1",
    "chai-as-promised": "8.0.0",
    "chokidar": "3.6.0",
    "chokidar-cli": "3.0.0",
    "jest": "29.7.0",
    "npm-run-all": "4.1.5"
  }
}
